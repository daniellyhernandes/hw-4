<div class="container">

<h1 style="font-family:'Comic Sans MS'"><%= @place["name"] %></h1>

<p>
  <a href="/posts/new?place_id=<%= @place["id"] %>" class="btn btn-outline-dark" >New Post</a>
</p>

<p>
</p>


  <div class="row">
  <% for post in @posts %>
    <div class="col-md-4 col-sm-6">
      
      <h3 class="text-primary"> <%= post["title"] %> </h3>
      <h5><%= post["posted_on"] %></h5>
        <% if post.uploaded_image.attached? %>
          <img src="<%= url_for(post.uploaded_image) %>" class="img-fluid">
          <p><%= post["description"] %></p>
        <% end %>
      
    </div>
    <% end %>
  </div>
 



 </div>
